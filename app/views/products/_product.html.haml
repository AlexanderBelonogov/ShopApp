.prod_box
  .center_prod_box
    .product_title
      = link_to product.name, product
    .product_img
      = link_to image_tag(product.image.present? ? product.image_url(:thumb) : 'image_not_available_big.gif', width: 100, height: 100), product
    .prod_price
      %span.price #{build_currency(product.price)}
  .prod_details_tab
    = link_to 'Add to cart', add_to_cart_product_path(product), method: :post, remote: true, class: 'prod_buy'
    = link_to 'Details', product, class: 'prod_details'