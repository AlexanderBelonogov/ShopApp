%table{:style => "background: #{image_url('bg.jpg')} repeat-x #e4e9ec top; font-size: 12px; width: 100%;"}
  %tr
    %td{:style => "padding: 30px 30px 10px;"}
      %table{:style => "background: #FFFFFF; width: 100%;"}
        %tr
          %td
            = image_tag('logo.png', style: 'border: 0 none;')
        %tr
          %td{:style => "color: #777777; padding: 20px 20px; font-size: 1.1em;"}
            %p Hello, #{@order.name}
            %br
            %p You created order in our shop:
            %p Total: #{number_to_currency(@order.total, unit: "$", separator: ",", delimiter: "", format: "%n %u")}
            - @body.each do |item, amount|
              .center_prod_box_big
                .product_image
                  = image_tag(item['img_url'].nil? ? 'image_not_available_big.gif' : item['img_url'], width: 100, height: 100)
                .product_title
                  #{item['name']}
                  %br
                  %br
                  .item_price #{item['price']}
                .total
                  .amount #{amount}
                  %br
                  Total:
                  %br
                  %span.price #{number_to_currency(item['price'] * amount, unit: "$", separator: ",", delimiter: "", format: "%n %u")}
  %tr
    %td{:style => "color: #FFFFFF; text-align: center"}
