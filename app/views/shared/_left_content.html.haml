.left_content
  .title_box Categories
  - unless @categories.blank?
    %ul.left_menu
      - @categories.each_with_index do |category, index|
        %li{class: index.even? ? 'even' : 'odd'}
          = link_to category.name, category, remote: true
  .title_box Last Viewed Products
  - if @last_viewed.present?
    - @last_viewed.each do |product|
      .border_box
        .product_title
          =link_to product.name, product, remote: true
        .product_img
          =link_to image_tag(product.image.present? ? product.image_url(:thumb) : 'image_not_available_big.gif', width: 100, height: 100), product, remote: true
        .prod_price
          %span.price #{build_currency(product.price)}